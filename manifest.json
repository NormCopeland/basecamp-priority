{
    "host_permissions": [
      "*://*.basecamp.com/*"
    ],
    "content_scripts": [
      {
        "matches": [
          "*://*.basecamp.com/*"
        ],
        "js": [
          "content.js"
        ],
        "css": [
          "styles.css"
        ]
      }
    ],
    "manifest_version": 3,
    "permissions": [
      "activeTab",
      "storage"
    ],
    "name": "Basecamp Priority Everywhere",
    "version": "1.0",
    "options_page": "options.html"
  }
  